{
  "name": "foodfy-hono-bun-api",
  "type": "module",
  "scripts": {
    "dev": "bun run --hot ./src/http/server.ts",
    "start": "bun run dist/server.js",
    "build": "bun build ./src/http/server.ts --outdir ./dist --format esm --target bun --minify --packages external",
    "lint": "bunx biome check .",
    "lint:fix": "bunx biome check . --write",
    "prepare": "husky"
  },
  "dependencies": {
    "hono": "4.7.7",
    "hono-pino": "0.8.0",
    "pino": "9.6.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bun": "1.2.10",
    "husky": "9.1.7",
    "lint-staged": "15.5.1"
  }
}
