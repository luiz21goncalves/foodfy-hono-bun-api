{
  "name": "foodfy-hono-bun-api",
  "type": "module",
  "version": "0.0.0",
  "scripts": {
    "dev": "NODE_ENV=development bun run --hot ./src/http/server.ts",
    "start": "bun run dist/server.js",
    "build": "bun build ./src/http/server.ts --outdir ./dist --format esm --target bun --minify --packages external",
    "lint": "bunx biome check .",
    "lint:fix": "bunx biome check . --write",
    "prepare": "husky",
    "test": "bun test",
    "generate": "bun --env-file=.env.development drizzle-kit generate",
    "migrate": "bun --env-file=.env.development drizzle-kit migrate"
  },
  "dependencies": {
    "@hono/zod-validator": "0.4.3",
    "drizzle-orm": "0.43.1",
    "hono": "4.7.7",
    "hono-pino": "0.8.0",
    "pino": "9.6.0",
    "zod": "3.24.3",
    "zod-validation-error": "3.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@faker-js/faker": "9.7.0",
    "@types/bun": "1.2.11",
    "drizzle-kit": "0.31.0",
    "husky": "9.1.7",
    "lint-staged": "15.5.1",
    "pg": "8.15.6"
  }
}
