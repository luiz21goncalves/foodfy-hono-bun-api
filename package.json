{
  "name": "foodfy-hono-bun-api",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development bun run --hot ./src/http/server.ts",
    "start": "bun run dist/server.js",
    "build": "bun build ./src/http/server.ts --outdir ./dist --format esm --target bun --minify --packages external",
    "lint": "bunx biome check .",
    "lint:fix": "bunx biome check . --write",
    "prepare": "husky",
    "test": "bun test"
  },
  "dependencies": {
    "@hono/zod-validator": "0.4.3",
    "hono": "4.7.7",
    "hono-pino": "0.8.0",
    "pino": "9.6.0",
    "zod": "3.24.3",
    "zod-validation-error": "3.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bun": "1.2.10",
    "husky": "9.1.7",
    "lint-staged": "15.5.1"
  }
}
